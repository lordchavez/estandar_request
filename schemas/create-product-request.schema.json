{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CreateProductRequest",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "price": {
      "type": "number",
      "minimum": 0
    },
    "currency": {
      "type": "string",
      "minLength": 1
    },
    "stock": {
      "type": "integer",
      "minimum": 0
    },
    "categoryId": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": [
    "name",
    "price",
    "currency",
    "stock",
    "categoryId"
  ],
  "additionalProperties": false
}